            </li>
        </ul>
        <div class="page-toolbar">
            <div class="btn-group pull-right">
                <a data-close-others="true" class="btn btn-fit-height btn-primary dropdown-toggle"
                   href="#" onclick="document.forms[0].submit()">
                    <i class="fa fa-save"></i> &nbsp;Salvar
                </a>
            </div>
        </div>
    </div>
{% endblock %}
